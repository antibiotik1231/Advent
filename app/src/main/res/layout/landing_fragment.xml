<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg9"
    android:orientation="vertical"
    tools:context=".ui.landing.LandingFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/custom_font"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="My Advent Calendar"
            android:textColor="@color/white"
            android:textSize="32sp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="@color/semi_transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="100dp">

        <io.alterac.blurkit.BlurLayout
            android:id="@+id/landing_fragment_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blk_blurRadius="1"
            app:blk_cornerRadius="5dp"
            app:blk_fps="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Who is playing?"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/landing_fragment_button_diana"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/rounded_corner"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center"
                    android:text="Diana"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/landing_fragment_button_bob"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="48dp"
                    android:background="@drawable/rounded_corner"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center"
                    android:text="Bobby"
                    android:textSize="32sp" />

            </LinearLayout>

        </io.alterac.blurkit.BlurLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>